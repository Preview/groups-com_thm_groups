<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
        <field
                name="dynamic"
                type="dynamic"
                label="COM_THM_GROUPS_STATIC_FILTER"
                description="COM_THM_GROUPS_STATIC_FILTER_DESC"
                onchange="this.form.submit();"
                />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="dynamic.id ASC"
                >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="structure.id ASC">COM_THM_GROUPS_STRUCTURE_ITEM_MANAGER_SORT_BY_ID_ASC</option>
            <option value="structure.id DESC">COM_THM_GROUPS_STRUCTURE_ITEM_MANAGER_SORT_BY_ID_DESC</option>
            <option value="structure.name ASC">COM_THM_GROUPS_STRUCTURE_ITEM_MANAGER_SORT_BY_NAME_ASC</option>
            <option value="structure.name DESC">COM_THM_GROUPS_STRUCTURE_ITEM_MANAGER_SORT_BY_NAME_DESC</option>
            <option value="dynamic.name ASC">COM_THM_GROUPS_STRUCTURE_ITEM_MANAGER_SORT_BY_DYNAMIC_TYPE_ASC</option>
            <option value="dynamic.name DESC">COM_THM_GROUPS_STRUCTURE_ITEM_MANAGER_SORT_BY_DYNAMIC_TYPE_DESC</option>

        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
