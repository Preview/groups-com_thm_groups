<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_THM_GROUPS_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="id ASC"
                >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="id ASC">COM_THM_GROUPS_ROLE_MANAGER_SORT_BY_ID_ASC</option>
            <option value="id DESC">COM_THM_GROUPS_ROLE_MANAGER_SORT_BY_ID_DESC</option>
            <option value="name ASC">COM_THM_GROUPS_ROLE_MANAGER_SORT_BY_NAME_ASC</option>
            <option value="name DESC">COM_THM_GROUPS_ROLE_MANAGER_SORT_BY_NAME_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
