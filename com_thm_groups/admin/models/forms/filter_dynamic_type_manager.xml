<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
        <field
                name="static"
                type="list"
                label="COM_THM_GROUPS_STATIC_FILTER"
                description="COM_THM_GROUPS_STATIC_FILTER_DESC"
                onchange="this.form.submit();"
                >
            <option value="*">COM_THM_GROUPS_STATIC_FILTER_ALL</option>
            <option value="1">COM_THM_GROUPS_STATIC_FILTER_TEXT</option>
            <option value="2">COM_THM_GROUPS_STATIC_FILTER_TEXTFIELD</option>
            <option value="3">COM_THM_GROUPS_STATIC_FILTER_LINK</option>
            <option value="4">COM_THM_GROUPS_STATIC_FILTER_PICTURE</option>
            <option value="5">COM_THM_GROUPS_STATIC_FILTER_MULTISELECT</option>
            <option value="6">COM_THM_GROUPS_STATIC_FILTER_TABLE</option>
            <option value="7">COM_THM_GROUPS_STATIC_FILTER_NUMBER</option>
            <option value="8">COM_THM_GROUPS_STATIC_FILTER_DATE</option>
            <option value="9">COM_THM_GROUPS_STATIC_FILTER_TEMPLATE</option>
        </field>
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="dynamic.id ASC"
                >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="dynamic.id ASC">COM_THM_GROUPS_DYNAMIC_TYPE_MANAGER_SORT_BY_ID_ASC</option>
            <option value="dynamic.id DESC">COM_THM_GROUPS_DYNAMIC_TYPE_MANAGER_SORT_BY_ID_DESC</option>
            <option value="dynamic.name ASC">COM_THM_GROUPS_DYNAMIC_TYPE_MANAGER_SORT_BY_DYNAMIC_TYPE_ASC</option>
            <option value="dynamic.name DESC">COM_THM_GROUPS_DYNAMIC_TYPE_MANAGER_SORT_BY_DYNAMIC_TYPE_DESC</option>
            <option value="static.name ASC">COM_THM_GROUPS_DYNAMIC_TYPE_MANAGER_SORT_BY_STATIC_TYPE_ASC</option>
            <option value="static.name DESC">COM_THM_GROUPS_DYNAMIC_TYPE_MANAGER_SORT_BY_STATIC_TYPE_DESC</option>

        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
